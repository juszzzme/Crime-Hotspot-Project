# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URI=postgresql://username:password@localhost:5432/crime_hotspot_db
DATABASE_TEST_URI=postgresql://username:password@localhost:5432/crime_hotspot_test

# Map Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Application Settings
UPLOAD_FOLDER=./app/static/uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max file size

# Security
SECURITY_PASSWORD_SALT=your-password-salt-here

# OAuth Configuration (for future use)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
